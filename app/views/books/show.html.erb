
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
      <% if @user.id == current_user.id %>
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/edit"></a>
      <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
           <td>
             <%= link_to user_path(current_user) do %>
             <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg" %><br>
             <%= @user.name %>
             <% end %>
           </td>

           <td>
             <%= link_to book_path do %>
             <%= @book.title %>
             <% end %>
           </td>

           <td><%= @book.body %></td>

           <td>
             <%= link_to "Edit", edit_book_path %>
           </td>
           <td>
             <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
             <% end %>
           </td>
          </tr>
        </tbody>
      </table>
    </div>
   </div>
 </div>
